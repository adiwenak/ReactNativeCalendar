{
    "name": "ReactNativeTS",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "start": "node node_modules/react-native/local-cli/cli.js start",
        "start:ios": "react-native run-ios",
        "linting": "gulp tslint",
        "test": "jest"
    },
    "dependencies": {
        "@types/moment": "^2.13.0",
        "@types/react-native": "^0.56.17",
        "moment": "^2.22.2",
        "react": "16.3.1",
        "react-native": "^0.55.0",
        "tslib": "^1.9.0"
    },
    "devDependencies": {
        "@types/jest": "^22.1.1",
        "@types/react-test-renderer": "^16.0.0",
        "babel-core": "^6.0.0",
        "babel-jest": "^22.1.0",
        "babel-preset-react-native": "^4.0.0",
        "gulp": "^3.9.1",
        "gulp-tslint": "^8.1.2",
        "jest": "22.4.0",
        "jest-react-native": "^18.0.0",
        "react-native-typescript-transformer": "^1.2.3",
        "react-test-renderer": "^16.2.0",
        "require-dir": "^0.3.2",
        "ts-jest": "^22.4.6",
        "tslint": "^5.9.1",
        "typescript": "^2.8.0"
    },
    "jest": {
        "globals": {
            "ts-jest": {
                "useBabelrc": true
            }
        },
        "preset": "react-native",
        "transform": {
            "^.+\\.jsx?$": "<rootDir>/node_modules/babel-jest",
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ]
    }
}
